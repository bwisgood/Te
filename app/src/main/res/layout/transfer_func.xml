<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.example.baiwei.pages.CustomTitleBar
        android:id="@+id/ct_transfer_fun"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:show_right_button="false"
        app:title_text="激活" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"

        android:orientation="vertical">


        <TextView
            android:id="@+id/transfer_fun_tv_user_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:textSize="30sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="激活账号"
            android:layout_marginBottom="20dp"/>
        <EditText
            android:id="@+id/ed_username"
            android:hint="请输入要激活的账号"
            android:maxLines="1"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/bg_edittext"
            android:layout_marginBottom="20dp"/>

        <TextView
            android:textSize="30sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请选择套餐"
            android:layout_marginBottom="20dp"/>

        <Spinner
            android:id="@+id/transfer_fun_spinner_product"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/product"
            android:layout_marginBottom="20dp"/>

        <TextView
            android:textSize="30sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请选择支付方式"
            android:layout_marginBottom="20dp"/>

        <Spinner
            android:id="@+id/transfer_fun_spinner_payMethod"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/method"
            android:layout_marginBottom="20dp"/>

    </LinearLayout>

    <Button
        android:id="@+id/btn_active"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="激活"
        android:textColor="#fff"
        android:background="@color/colorPrimaryDark"/>

</LinearLayout>