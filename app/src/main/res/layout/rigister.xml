<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView

            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:text="以下为必填内容"
            android:background="#ddd"
            android:textSize="20sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="推荐人"
                android:textSize="20sp"
                android:textStyle="bold"
                />
            <EditText
                android:id="@+id/register_ed_tuijianren"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="请输入推荐人"
                android:background="@drawable/bg_edittext"
                android:layout_marginTop="10dp"/>

            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="用户名"
                android:textSize="20sp"
                android:textStyle="bold"
                />
            <EditText
                android:id="@+id/register_ed_username"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="请输入用户名"
                android:background="@drawable/bg_edittext"
                android:layout_marginTop="10dp"/>

            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="登陆密码"
                android:textSize="20sp"
                android:textStyle="bold"
                />
            <EditText

                android:id="@+id/register_ed_password"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="请输入登陆密码"
                android:inputType="textPassword"
                android:background="@drawable/bg_edittext"
                android:layout_marginTop="10dp"/>

            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="确认密码"
                android:textSize="20sp"
                android:textStyle="bold"
                />
            <EditText
                android:inputType="textPassword"
                android:id="@+id/register_ed_confirm_password"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="请再次输入密码"
                android:background="@drawable/bg_edittext"
                android:layout_marginTop="10dp"/>

            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="真实姓名"
                android:textSize="20sp"
                android:textStyle="bold"
                />
            <EditText
                android:id="@+id/register_ed_realname"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="请输真实姓名"
                android:background="@drawable/bg_edittext"
                android:layout_marginTop="10dp"/>

            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="身份证号码"
                android:textSize="20sp"
                android:textStyle="bold"
                />
            <EditText
                android:maxLines="1"
                android:inputType="number"
                android:id="@+id/register_ed_idcard"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="请输入身份证号码"
                android:background="@drawable/bg_edittext"
                android:layout_marginTop="10dp"/>

            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="手机号"
                android:textSize="20sp"
                android:textStyle="bold"
                />
            <EditText
                android:maxLines="1"
                android:inputType="number"
                android:id="@+id/register_ed_phone"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="请输入手机号"
                android:background="@drawable/bg_edittext"
                android:layout_marginTop="10dp"/>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <EditText
                    android:id="@+id/register_ed_check"
                    android:background="@drawable/bg_edittext"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:hint="验证码"
                    android:layout_weight="2"/>
                <ImageView
                    android:id="@+id/check_image"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>
            </LinearLayout>
            <Button
                android:id="@+id/btn_Register_registe"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                android:textSize="20sp"
                android:text="注   册"
                android:background="@color/colorPrimaryDark"/>

            <LinearLayout
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="right">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textColor="#aaa"
                    android:text="已有一个账号？"/>
                <TextView
                    android:id="@+id/textView_login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:text="立即登陆"
                    android:autoLink="all"
                    android:textColor="@color/colorPrimaryDark"
                    />


            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>